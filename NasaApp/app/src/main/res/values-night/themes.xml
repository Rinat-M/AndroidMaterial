<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryVariant">@color/grey_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/deep_orange_500</item>

        <item name="mainHeader">@style/MainHeader</item>
        <item name="secondaryHeader">@style/SecondaryHeader</item>
        <item name="customChoiceChip">@style/CustomChoiceChip</item>
        <item name="customOutlinedBox">@style/CustomOutlinedBox</item>
        <item name="bottomAppBar">@style/BottomAppBar</item>
        <item name="colorControlNormal">?colorOnSecondary</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>
        <item name="appBarBackgroundColor">@color/black</item>
        <item name="listItemBackgroundColor">@color/grey_700</item>
        <item name="android:editTextColor">?colorOnSecondary</item>
    </style>

    <style name="MainHeader" parent="Base.Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/main_header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryHeader" parent="Base.Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/secondary_header_text_size</item>
    </style>

    <style name="CustomChoiceChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg_states</item>
    </style>

    <style name="CustomOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:padding">@dimen/margin_padding_4dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">50</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="fabAlignmentMode">end</item>
        <item name="navigationIcon">@drawable/ic_menu</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorOnSurface">?colorPrimaryVariant</item>
        <item name="colorPrimary">@color/grey_100</item>
    </style>

    <style name="AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?appBarBackgroundColor</item>
        <item name="android:textColorPrimary">?colorOnSecondary</item>
        <item name="android:textColorHint">?colorPrimary</item>
    </style>

    <style name="TodoTitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/todo_title_text_size</item>
        <item name="android:fontFamily">@font/russo_one</item>
    </style>

</resources>